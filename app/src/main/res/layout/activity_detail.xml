<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:titleTextColor="@color/white"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".DetailActivity">



    <ImageView
        android:id="@+id/Image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Image"
        tools:text="Spencer" />


    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Image"
        android:fontFamily="sans-serif-thin"
        tools:text="Terogene" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:autoLink="all"
        android:fontFamily="sans-serif-thin"
        tools:text="Description" />

    <View
        android:id="@+id/divider3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/heure"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:text="TextView"
        />
    <TextView
        android:id="@+id/retweet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/likes"
        android:text="TextView"

        />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            app:drawableLeftCompat="@drawable/comment" />

    <TextView
        android:id="@+id/repeat"
        android:layout_below="@+id/divider"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/black_24"
        android:layout_toEndOf="@+id/comment"
        />

    <TextView
        android:id="@+id/repeat1"
        android:layout_below="@+id/divider"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/red_24"
        android:layout_toEndOf="@+id/comment"
        />

    <TextView
        android:id="@+id/coeur"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/repeat"
        app:drawableLeftCompat="@drawable/coeur"
        />

        <TextView
            android:id="@+id/coeur1"
            android:layout_below="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/repeat"
            app:drawableLeftCompat="@drawable/cards_heart"
            />

    <TextView
        android:id="@+id/share"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/coeur"
        app:drawableLeftCompat="@drawable/share"
        />



    <View
        android:id="@+id/divider"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/likes"
        android:background="?android:attr/listDivider"
        />

        <View
            android:id="@+id/divider2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Image1"
            android:background="?android:attr/listDivider"
            />
        <TextView
            android:id="@+id/heure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            />



    <View
        android:id="@+id/divider1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/comment"
        android:background="?android:attr/listDivider"
        />

    <ImageView
        android:id="@+id/Image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Description"
        tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:layout_marginTop="5dp"
            app:counterTextColor="@color/bleu"
            android:layout_below="@+id/comment"
            app:counterEnabled="true"
            app:counterMaxLength="140">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCompose_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="What's hapenning?"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColorHint="@color/bleu"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/bleu"
            android:elevation="20dp"
            android:text="@string/tweet"
            android:textColor="@color/white" />


    </RelativeLayout>
</LinearLayout>