<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".DetailActivity">



    <ImageView
        android:id="@+id/Image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Image"
        tools:text="Spencer" />


    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Image"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/Image"
        android:fontFamily="sans-serif-thin"
        tools:text="Terogene" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:autoLink="all"
        android:fontFamily="sans-serif-thin"
        tools:text="Description" />
    <TextView
        android:id="@+id/comment"
        android:text="5"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image1"
        app:drawableLeftCompat="@drawable/comment"
        />

    <TextView
        android:id="@+id/repeat"
        android:text="5"
        android:layout_below="@+id/Image1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/repeat"
        android:layout_toEndOf="@+id/comment"
        />

    <TextView
        android:id="@+id/coeur"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Image1"
        android:layout_width="wrap_content"
        android:layout_marginStart="50dp"
        android:text="5"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/repeat"
        app:drawableLeftCompat="@drawable/coeur"
        />

    <TextView
        android:id="@+id/share"
        android:layout_marginStart="50dp"
        android:text="5"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/coeur"
        app:drawableLeftCompat="@drawable/share"
        />

    <View
        android:id="@+id/divider"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Image1"
        android:background="?android:attr/listDivider"
        />

    <View
        android:id="@+id/divider1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/comment"
        android:background="?android:attr/listDivider"
        />

    <ImageView
        android:id="@+id/Image1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Description"
        tools:srcCompat="@tools:sample/avatars" />


    </RelativeLayout>
</LinearLayout>