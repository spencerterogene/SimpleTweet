<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">



    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ScreenName"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ScreenName"
        android:fontFamily="sans-serif-thin"
        tools:text="Terogene" />

    <TextView
        android:id="@+id/ScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ProfileImage"
        tools:text="Spencer" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/username"
        />

    <TextView
        android:id="@+id/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ProfileImage"
        tools:text="This is my tweet!!"
        android:autoLink="all"
        />

    <TextView
        android:id="@+id/comment"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image"
        app:drawableLeftCompat="@drawable/comment"
        />

    <TextView
        android:id="@+id/repeat"
        android:layout_below="@+id/Image"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:drawableLeftCompat="@drawable/black_24"
        android:layout_toEndOf="@+id/comment"
        />

    <TextView
        android:id="@+id/repeat1"
        android:layout_below="@+id/Image"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:drawableLeftCompat="@drawable/red_24"
        android:layout_toEndOf="@+id/comment"
        />

    <TextView
        android:id="@+id/coeur"
        android:layout_below="@+id/Image"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/repeat"
        app:drawableLeftCompat="@drawable/coeur"
        />

    <TextView
        android:id="@+id/coeur1"
        android:layout_below="@+id/Image"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/repeat"
        app:drawableLeftCompat="@drawable/cards_heart"
        />





    <ImageView
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Body"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
        android:id="@+id/video_player_1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/video_cover_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Body"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp" />


    <View
        android:id="@+id/divider1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/comment"
        android:background="?android:attr/listDivider"
    />




</RelativeLayout>